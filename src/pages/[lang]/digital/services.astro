---
import type { Lang } from '../../../lib/i18n/i18n';
import { LANGS } from '../../../lib/i18n/i18n';
import { getCollection } from 'astro:content';
import { fallbackText } from '../../../lib/i18n/i18n';

import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import CardGrid from '../../../components/ui/CardGrid/CardGrid.astro';

export async function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };

const entries = await getCollection('services');
const items = entries
  .sort((a, b) => a.data.order - b.data.order)
  .map(({ data }) => ({
    title: fallbackText(data.title, lang),
    description: fallbackText(data.description, lang),
    imageSrc: data.image,
    imageAlt: fallbackText(data.title, lang)
  }));
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Digital Services · Nonome</title>
  </head>
  <body>
    <Header lang={lang} />

    <main class="main">
      <h1>digital · services</h1>
      <p class="intro">Consulting and development services (hover-only).</p>
      <CardGrid items={items} />
    </main>

    <Footer lang={lang} />
  </body>
</html>

<style>
  html,body{margin:0;font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Arial;overflow-x:hidden;}
  *{box-sizing:border-box;}
  .main{padding:32px 0 0;}
  h1{padding:0 24px;margin:0 0 10px;font-size:18px;letter-spacing:.02em;text-transform:lowercase;}
  .intro{padding:0 24px;margin:0 0 20px;opacity:.65;}
</style>
