---
import type { Lang } from '../../../lib/i18n/i18n';
import { LANGS } from '../../../lib/i18n/i18n';
import { getCollection } from 'astro:content';
import { fallbackText } from '../../../lib/i18n/i18n';

import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import CardGrid from '../../../components/ui/CardGrid/CardGrid.astro';

export async function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };

const entries = await getCollection('services');
const items = entries
  .sort((a, b) => a.data.order - b.data.order)
  .map(({ data, slug }) => ({
    title: fallbackText(data.title, lang),
    description: fallbackText(data.description, lang),
    imageSrc: data.image,
    imageAlt: fallbackText(data.title, lang),
    href: `/${lang}/digital/services/${slug}`
  }));
---

<Layout lang={lang} title="Digital Services · Nonome">
  <Header lang={lang} />

  <main class="main">
    <h1>digital · services</h1>
    <CardGrid items={items} />
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  .main{padding:32px 0 0;}
  h1{padding:0 24px;margin:0 0 10px;font-size:18px;letter-spacing:.02em;text-transform:lowercase;}
</style>
