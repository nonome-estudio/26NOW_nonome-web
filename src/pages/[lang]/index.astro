---
import type { Lang } from '../../lib/i18n/i18n';
import { LANGS } from '../../lib/i18n/i18n';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';

export async function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };
---

<Layout lang={lang} title="Nonome">
  <Header lang={lang} />

  <main class="main">
    <div class="hero">
      <h1>nonome</h1>
      <p>architecture + digital processes, designed as a clean experience.</p>
    </div>

    <div class="split">
      <a class="tile" href={`/${lang}/architecture`}>architecture</a>
      <a class="tile" href={`/${lang}/digital/services`}>digital</a>
    </div>
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  .main{padding:32px 24px 0;}
  h1{margin:0 0 12px;font-size:28px;letter-spacing:.02em;}
  p{margin:0;opacity:.7;max-width:60ch;}
  .hero{padding:24px 0 40px;}
  .split{display:grid;grid-template-columns:1fr;gap:16px;max-width:920px;}
  .tile{border:1px solid var(--border);padding:28px;text-decoration:none;color:inherit;display:block;transition:transform 220ms ease, box-shadow 220ms ease;}
  .tile:hover{transform:scale(1.01);box-shadow:0 10px 26px rgba(0,0,0,.08);} 
  @media(min-width:840px){.split{grid-template-columns:1fr 1fr;}}
</style>
