---
import type { Lang } from '../../lib/i18n/i18n';

type Props = {
  lang: Lang;
};

const { lang } = Astro.props;
const otherLang = lang === 'es' ? 'en' : 'es';
---

<header class="header">
  <div class="left">
    <a class="logo" href={`/${lang}/`}>nonome</a>
  </div>

  <nav class="nav">
    <a href={`/${lang}/architecture`}>{lang === 'es' ? 'arquitectura' : 'architecture'}</a>
    <a href={`/${lang}/digital/services`}>{lang === 'es' ? 'digital路servicios' : 'digital路services'}</a>
    <a href={`/${lang}/digital/cases`}>{lang === 'es' ? 'digital路casos' : 'digital路cases'}</a>
  </nav>

  <div class="right">
    <a class="lang" href={`/${otherLang}${Astro.url.pathname.slice(3)}`}>{otherLang.toUpperCase()}</a>
  </div>
</header>

<style>
  .header{display:flex;align-items:center;justify-content:space-between;gap:16px;padding:18px 16px 10px;flex-wrap:wrap;max-width:100%;}
  .left,.right{flex:0 0 auto;}
  .nav{display:flex;gap:12px;flex-wrap:wrap;min-width:0;}
  .logo{font-weight:600;letter-spacing:.02em;text-decoration:none;color:inherit;white-space:nowrap;}
  .nav a,.lang{color:inherit;text-decoration:none;opacity:.75;white-space:nowrap;}
  .nav a:hover,.lang:hover{opacity:1;}
</style>
