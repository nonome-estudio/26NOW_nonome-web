---
import type { Lang } from '../../lib/i18n/i18n';

type Props = {
  lang: Lang;
};

const { lang } = Astro.props;
const otherLang = lang === 'es' ? 'en' : 'es';
---

<header class="header">
  <div class="left">
    <a class="logo" href={`/${lang}/`}>nonome</a>
  </div>

  <nav class="nav">
    <a href={`/${lang}/architecture`}>architecture</a>
    <a href={`/${lang}/digital/services`}>digital·services</a>
    <a href={`/${lang}/digital/cases`}>digital·cases</a>
  </nav>

  <div class="right">
    <a class="lang" href={`/${otherLang}${Astro.url.pathname.slice(3)}`}>{otherLang.toUpperCase()}</a>
  </div>
</header>

<style>
  .header{display:flex;align-items:center;justify-content:space-between;gap:24px;padding:24px 24px 12px;}
  .logo{font-weight:600;letter-spacing:.02em;text-decoration:none;color:inherit;}
  .nav{display:flex;gap:16px;}
  .nav a,.lang{color:inherit;text-decoration:none;opacity:.75;}
  .nav a:hover,.lang:hover{opacity:1;}
</style>
