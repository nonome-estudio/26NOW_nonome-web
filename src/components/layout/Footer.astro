---
import type { Lang } from '../../lib/i18n/i18n';

type Props = { lang: Lang };
const { lang } = Astro.props;
---

<footer class="footer">
  <div class="contact">
    <div class="label">contact</div>
    <a href="mailto:info@nonomeweb.es">info@nonomeweb.es</a>
    <a href="tel:+34696834369">+34 696 834 369</a>
    <div class="address">Calle Ancha, 26 · Ponferrada · 24401</div>
  </div>
  <div class="legal">
    <a href={`/${lang}/legal`}>legal</a>
  </div>
</footer>

<style>
  .footer{display:flex;justify-content:space-between;gap:24px;padding:48px 24px 64px;border-top:1px solid rgba(0,0,0,.08);margin-top:64px;}
  .label{opacity:.6;margin-bottom:8px;}
  a{color:inherit;text-decoration:none;opacity:.75;display:block;margin:4px 0;}
  a:hover{opacity:1;}
  .address{opacity:.6;margin-top:8px;}
</style>
